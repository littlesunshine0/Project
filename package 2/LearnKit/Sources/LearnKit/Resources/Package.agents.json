{
  "agents": [
    {
      "id": "learn.tutor",
      "name": "Learning Tutor",
      "description": "Provides personalized learning guidance",
      "triggers": [
        { "type": "event", "condition": "lesson.started" },
        { "type": "event", "condition": "quiz.failed" }
      ],
      "actions": [
        "analyze.progress",
        "identify.gaps",
        "suggest.content",
        "provide.hints"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    },
    {
      "id": "learn.progress.tracker",
      "name": "Progress Tracker",
      "description": "Tracks and analyzes learning progress",
      "triggers": [
        { "type": "event", "condition": "lesson.completed" },
        { "type": "event", "condition": "quiz.completed" }
      ],
      "actions": [
        "update.progress",
        "calculate.stats",
        "check.achievements",
        "notify.milestones"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    },
    {
      "id": "learn.recommender",
      "name": "Content Recommender",
      "description": "Recommends next learning content",
      "triggers": [
        { "type": "event", "condition": "lesson.completed" },
        { "type": "event", "condition": "session.start" }
      ],
      "actions": [
        "analyze.history",
        "find.relevant",
        "rank.content",
        "suggest.next"
      ],
      "config": {
        "autoStart": true,
        "priority": "low",
        "maxConcurrent": 1
      }
    }
  ]
}
