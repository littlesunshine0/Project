{
  "agents": [
    {
      "id": "activity.tracker",
      "name": "Activity Tracker",
      "description": "Tracks user activity",
      "triggers": [
        { "type": "event", "condition": "user.action" }
      ],
      "actions": [
        "log.activity",
        "update.stats",
        "check.milestones"
      ],
      "config": {
        "autoStart": true,
        "priority": "low",
        "maxConcurrent": 1
      }
    },
    {
      "id": "activity.achievement.checker",
      "name": "Achievement Checker",
      "description": "Checks for achievement unlocks",
      "triggers": [
        { "type": "event", "condition": "activity.logged" }
      ],
      "actions": [
        "check.criteria",
        "unlock.achievement",
        "notify.user"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    }
  ]
}
