{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "loading", "name": "Loading", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "ingesting", "name": "Ingesting", "icon": "square.and.arrow.down", "color": "blue" },
    { "id": "indexing", "name": "Indexing", "icon": "doc.text.magnifyingglass", "color": "orange" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "knowledge.created", "name": "Knowledge Created", "severity": "success" },
    { "id": "knowledge.updated", "name": "Knowledge Updated", "severity": "info" },
    { "id": "knowledge.deleted", "name": "Knowledge Deleted", "severity": "warning" },
    { "id": "ingest.started", "name": "Ingestion Started", "severity": "info" },
    { "id": "ingest.completed", "name": "Ingestion Completed", "severity": "success" },
    { "id": "knowledge.error", "name": "Knowledge Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "loading", "event": "knowledge.load" },
    { "from": "idle", "to": "ingesting", "event": "ingest.started" },
    { "from": "ingesting", "to": "indexing", "event": "ingest.completed" },
    { "from": "indexing", "to": "idle", "event": "index.completed" },
    { "from": "loading", "to": "idle", "event": "knowledge.loaded" },
    { "from": "ingesting", "to": "error", "event": "knowledge.error" },
    { "from": "error", "to": "idle", "event": "reset" }
  ]
}
