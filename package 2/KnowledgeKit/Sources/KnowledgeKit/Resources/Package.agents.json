{
  "agents": [
    {
      "id": "knowledge.linker",
      "name": "Auto Linker",
      "description": "Automatically links related knowledge entries",
      "triggers": [
        { "type": "event", "condition": "knowledge.created" },
        { "type": "event", "condition": "knowledge.updated" }
      ],
      "actions": [
        "analyze.content",
        "find.related",
        "create.links",
        "update.graph"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    },
    {
      "id": "knowledge.enricher",
      "name": "Content Enricher",
      "description": "Enriches knowledge with metadata and tags",
      "triggers": [
        { "type": "event", "condition": "knowledge.created" }
      ],
      "actions": [
        "extract.entities",
        "generate.tags",
        "add.metadata",
        "classify.content"
      ],
      "config": {
        "autoStart": true,
        "priority": "low",
        "maxConcurrent": 2
      }
    },
    {
      "id": "knowledge.recommender",
      "name": "Knowledge Recommender",
      "description": "Recommends relevant knowledge based on context",
      "triggers": [
        { "type": "event", "condition": "context.change" },
        { "type": "event", "condition": "file.open" }
      ],
      "actions": [
        "analyze.context",
        "find.relevant",
        "rank.results",
        "suggest.knowledge"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    }
  ]
}
