{
  "agents": [
    {
      "id": "command.suggester",
      "name": "Command Suggester",
      "description": "Suggests commands based on context, history, and user patterns",
      "triggers": [
        { "type": "event", "condition": "user.typing" },
        { "type": "event", "condition": "context.change" },
        { "type": "event", "condition": "file.open" },
        { "type": "event", "condition": "selection.change" }
      ],
      "actions": [
        "analyze.context",
        "fetch.history",
        "rank.commands",
        "suggest.commands",
        "learn.preference"
      ],
      "config": {
        "autoStart": true,
        "priority": "high",
        "maxConcurrent": 1
      }
    },
    {
      "id": "command.history.tracker",
      "name": "History Tracker",
      "description": "Tracks command usage patterns and execution history",
      "triggers": [
        { "type": "event", "condition": "command.executed" },
        { "type": "event", "condition": "command.failed" },
        { "type": "event", "condition": "command.cancelled" }
      ],
      "actions": [
        "record.execution",
        "update.frequency",
        "analyze.patterns",
        "detect.anomalies"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    },
    {
      "id": "command.autocomplete",
      "name": "Autocomplete Agent",
      "description": "Provides intelligent autocomplete suggestions",
      "triggers": [
        { "type": "event", "condition": "user.typing" },
        { "type": "event", "condition": "parameter.focus" }
      ],
      "actions": [
        "parse.partial",
        "fetch.completions",
        "rank.completions",
        "show.suggestions"
      ],
      "config": {
        "autoStart": true,
        "priority": "high",
        "maxConcurrent": 1
      }
    },
    {
      "id": "command.error.recovery",
      "name": "Error Recovery Agent",
      "description": "Helps recover from command errors and suggests fixes",
      "triggers": [
        { "type": "event", "condition": "command.failed" },
        { "type": "event", "condition": "syntax.error" },
        { "type": "event", "condition": "parameter.invalid" }
      ],
      "actions": [
        "analyze.error",
        "identify.cause",
        "suggest.fix",
        "offer.alternatives",
        "auto.correct"
      ],
      "config": {
        "autoStart": true,
        "priority": "high",
        "maxConcurrent": 1
      }
    },
    {
      "id": "command.optimizer",
      "name": "Command Optimizer",
      "description": "Optimizes command sequences and suggests improvements",
      "triggers": [
        { "type": "event", "condition": "batch.created" },
        { "type": "event", "condition": "macro.recorded" },
        { "type": "schedule", "condition": "daily" }
      ],
      "actions": [
        "analyze.sequence",
        "detect.redundancy",
        "suggest.optimizations",
        "merge.commands",
        "reorder.steps"
      ],
      "config": {
        "autoStart": false,
        "priority": "low",
        "maxConcurrent": 1
      }
    },
    {
      "id": "command.validator",
      "name": "Command Validator",
      "description": "Validates commands before execution",
      "triggers": [
        { "type": "event", "condition": "command.submit" },
        { "type": "event", "condition": "command.create" }
      ],
      "actions": [
        "validate.syntax",
        "check.parameters",
        "verify.permissions",
        "warn.destructive"
      ],
      "config": {
        "autoStart": true,
        "priority": "critical",
        "maxConcurrent": 1
      }
    }
  ]
}
