{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "ideating", "name": "Ideating", "icon": "lightbulb", "color": "yellow" },
    { "id": "validating", "name": "Validating", "icon": "checkmark.seal", "color": "blue" },
    { "id": "planning", "name": "Planning", "icon": "doc.text", "color": "orange" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "appidea.created", "name": "App Idea Created", "severity": "success" },
    { "id": "appidea.validated", "name": "App Idea Validated", "severity": "success" },
    { "id": "appidea.planned", "name": "App Idea Planned", "severity": "success" }
  ],
  "transitions": [
    { "from": "idle", "to": "ideating", "event": "ideate.start" },
    { "from": "ideating", "to": "validating", "event": "appidea.created" },
    { "from": "validating", "to": "planning", "event": "appidea.validated" },
    { "from": "planning", "to": "completed", "event": "appidea.planned" }
  ]
}
