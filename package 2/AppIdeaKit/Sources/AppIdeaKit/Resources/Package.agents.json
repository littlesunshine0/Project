{
  "agents": [
    {
      "id": "appidea.validator",
      "name": "Idea Validator",
      "description": "Validates app idea feasibility",
      "triggers": [
        { "type": "event", "condition": "appidea.created" }
      ],
      "actions": [
        "analyze.idea",
        "check.feasibility",
        "suggest.improvements"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    }
  ]
}
