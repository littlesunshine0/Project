{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "loading", "name": "Loading", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "editing", "name": "Editing", "icon": "pencil", "color": "orange" },
    { "id": "previewing", "name": "Previewing", "icon": "eye", "color": "purple" },
    { "id": "exporting", "name": "Exporting", "icon": "square.and.arrow.up", "color": "blue" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "component.created", "name": "Component Created", "severity": "success" },
    { "id": "style.applied", "name": "Style Applied", "severity": "info" },
    { "id": "theme.changed", "name": "Theme Changed", "severity": "info" },
    { "id": "design.exported", "name": "Design Exported", "severity": "success" },
    { "id": "design.error", "name": "Design Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "loading", "event": "design.load" },
    { "from": "loading", "to": "editing", "event": "design.loaded" },
    { "from": "editing", "to": "previewing", "event": "preview.start" },
    { "from": "previewing", "to": "editing", "event": "preview.end" },
    { "from": "editing", "to": "exporting", "event": "export.start" },
    { "from": "exporting", "to": "completed", "event": "design.exported" },
    { "from": "error", "to": "idle", "event": "reset" }
  ]
}
