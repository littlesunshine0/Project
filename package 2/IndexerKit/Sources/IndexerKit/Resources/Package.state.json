{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "indexing", "name": "Indexing", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "optimizing", "name": "Optimizing", "icon": "gearshape.2", "color": "orange" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "index.started", "name": "Indexing Started", "severity": "info" },
    { "id": "index.completed", "name": "Indexing Completed", "severity": "success" },
    { "id": "index.error", "name": "Indexing Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "indexing", "event": "index.start" },
    { "from": "indexing", "to": "optimizing", "event": "index.complete" },
    { "from": "optimizing", "to": "completed", "event": "optimize.complete" },
    { "from": "indexing", "to": "error", "event": "index.error" }
  ]
