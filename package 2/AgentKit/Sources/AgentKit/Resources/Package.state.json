{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "starting", "name": "Starting", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "running", "name": "Running", "icon": "play.fill", "color": "green" },
    { "id": "thinking", "name": "Thinking", "icon": "brain", "color": "purple" },
    { "id": "executing", "name": "Executing Task", "icon": "gearshape.2", "color": "blue" },
    { "id": "paused", "name": "Paused", "icon": "pause.fill", "color": "yellow" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "stopped", "name": "Stopped", "icon": "stop.fill", "color": "gray" }
  ],
  "events": [
    { "id": "agent.started", "name": "Agent Started", "severity": "info" },
    { "id": "agent.stopped", "name": "Agent Stopped", "severity": "info" },
    { "id": "agent.error", "name": "Agent Error", "severity": "error" },
    { "id": "task.received", "name": "Task Received", "severity": "info" },
    { "id": "task.completed", "name": "Task Completed", "severity": "success" },
    { "id": "task.failed", "name": "Task Failed", "severity": "error" },
    { "id": "memory.updated", "name": "Memory Updated", "severity": "info" },
    { "id": "learning.complete", "name": "Learning Complete", "severity": "success" }
  ],
  "transitions": [
    { "from": "idle", "to": "starting", "event": "agent.start" },
    { "from": "starting", "to": "running", "event": "agent.started" },
    { "from": "running", "to": "thinking", "event": "task.received" },
    { "from": "thinking", "to": "executing", "event": "decision.made" },
    { "from": "executing", "to": "running", "event": "task.completed" },
    { "from": "running", "to": "paused", "event": "agent.pause" },
    { "from": "paused", "to": "running", "event": "agent.resume" },
    { "from": "running", "to": "stopped", "event": "agent.stop" },
    { "from": "running", "to": "error", "event": "agent.error" }
  ]
}
