{
  "agents": [
    {
      "id": "syntax.auto.highlighter",
      "name": "Auto Highlighter",
      "description": "Automatically highlights code",
      "triggers": [
        { "type": "event", "condition": "code.changed" }
      ],
      "actions": [
        "detect.language",
        "syntax.highlight"
      ],
      "config": {
        "autoStart": true,
        "priority": "high",
        "maxConcurrent": 2
      }
    }
  ]
}
