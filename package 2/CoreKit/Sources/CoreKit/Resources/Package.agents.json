{
  "agents": [
    {
      "id": "core.state.manager",
      "name": "State Manager",
      "description": "Manages global app state",
      "triggers": [
        { "type": "event", "condition": "state.change" }
      ],
      "actions": [
        "validate.state",
        "persist.state",
        "notify.observers"
      ],
      "config": {
        "autoStart": true,
        "priority": "critical",
        "maxConcurrent": 1
      }
    },
    {
      "id": "core.lifecycle.manager",
      "name": "Lifecycle Manager",
      "description": "Manages app lifecycle",
      "triggers": [
        { "type": "event", "condition": "app.launch" },
        { "type": "event", "condition": "app.terminate" }
      ],
      "actions": [
        "initialize.services",
        "cleanup.resources"
      ],
      "config": {
        "autoStart": true,
        "priority": "critical",
        "maxConcurrent": 1
      }
    }
  ]
}
