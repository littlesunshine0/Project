{
  "agents": [
    {
      "id": "network.monitor",
      "name": "Network Monitor",
      "description": "Monitors network connectivity",
      "triggers": [
        { "type": "event", "condition": "network.change" },
        { "type": "schedule", "condition": "every.30.seconds" }
      ],
      "actions": [
        "check.connectivity",
        "update.status",
        "notify.change"
      ],
      "config": {
        "autoStart": true,
        "priority": "high",
        "maxConcurrent": 1
      }
    },
    {
      "id": "network.retry.manager",
      "name": "Retry Manager",
      "description": "Manages request retries",
      "triggers": [
        { "type": "event", "condition": "request.failed" }
      ],
      "actions": [
        "analyze.failure",
        "schedule.retry",
        "execute.retry"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 3
      }
    }
  ]
}
