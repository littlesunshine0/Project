{
  "menus": [
    {
      "id": "file.main",
      "type": "main",
      "items": [
        { "id": "file.new", "title": "New File", "icon": "doc.badge.plus", "action": "file.create", "shortcut": "⌘N" },
        { "id": "file.open", "title": "Open", "icon": "folder", "action": "file.open", "shortcut": "⌘O" },
        { "id": "file.save", "title": "Save", "icon": "square.and.arrow.down", "action": "file.write", "shortcut": "⌘S" }
      ]
    },
    {
      "id": "file.context",
      "type": "context",
      "items": [
        { "id": "ctx.copy", "title": "Copy", "icon": "doc.on.doc", "action": "file.copy" },
