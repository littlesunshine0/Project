{
  "workflows": [
    {
      "id": "learn.lesson.flow",
      "name": "Lesson Flow",
      "description": "Complete lesson learning flow",
      "steps": [
        { "id": "1", "action": "lesson.start" },
        { "id": "2", "action": "show.content" },
        { "id": "3", "action": "quiz.start" },
        { "id": "4", "action": "quiz.submit" },
        { "id": "5", "action": "lesson.complete" },
        { "id": "6", "action": "progress.update" }
      ],
      "triggers": ["lesson.select"]
    },
    {
      "id": "learn.course.start",
      "name": "Start Course",
      "description": "Begin a new course",
      "steps": [
        { "id": "1", "action": "course.select" },
        { "id": "2", "action": "show.overview" },
        { "id": "3", "action": "lesson.start", "input": { "lessonId": "first" } }
      ],
      "triggers": ["menu.learn.start"]
    },
    {
      "id": "learn.review",
      "name": "Review Progress",
      "description": "Review learning progress",
      "steps": [
        { "id": "1", "action": "progress.get" },
        { "id": "2", "action": "show.dashboard" },
        { "id": "3", "action": "suggest.next" }
      ],
      "triggers": ["menu.learn.progress"]
    }
  ]
}
