{
  "menus": [
    {
      "id": "learn.main",
      "type": "main",
      "items": [
        { "id": "learn.courses", "title": "Courses", "icon": "book", "action": "course.list" },
        { "id": "learn.progress", "title": "My Progress", "icon": "chart.bar", "action": "progress.get" },
        { "id": "learn.achievements", "title": "Achievements", "icon": "star", "action": "achievements.list" }
      ]
    },
    {
      "id": "learn.context",
      "type": "context",
      "items": [
        { "id": "ctx.start", "title": "Start", "icon": "play.fill", "action": "lesson.start" },
        { "id": "ctx.resume", "title": "Resume", "icon": "arrow.right.circle", "action": "lesson.resume" },
        { "id": "ctx.reset", "title": "Reset", "icon": "arrow.counterclockwise", "action": "progress.reset" }
      ]
    }
  ],
  "views": [
    { "id": "learn.browser", "type": "browser", "title": "Learn", "icon": "book" },
    { "id": "learn.list", "type": "list", "title": "Courses", "icon": "list.bullet" },
    { "id": "learn.lesson", "type": "detail", "title": "Lesson", "icon": "doc.text" },
    { "id": "learn.progress", "type": "canvas", "title": "Progress", "icon": "chart.bar" }
  ],
  "animations": [
    { "id": "lesson.complete", "type": "success", "duration": 0.5, "curve": "spring" },
    { "id": "achievement.unlock", "type": "scale", "duration": 0.6, "curve": "spring" },
    { "id": "progress.update", "type": "progress", "duration": 0.3, "curve": "easeOut" }
  ],
  "icons": [
    { "id": "learn.main", "systemName": "book" },
    { "id": "learn.lesson", "systemName": "doc.text" },
    { "id": "learn.quiz", "systemName": "questionmark.circle" },
    { "id": "learn.achievement", "systemName": "star.fill" }
  ],
  "colorScheme": "adaptive",
  "accessibility": {
    "voiceOver": true,
    "reduceMotion": true,
    "highContrast": true,
    "dynamicType": true
  }
}
