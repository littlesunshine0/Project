{
  "menus": [
    {
      "id": "doc.main",
      "type": "main",
      "items": [
        { "id": "doc.new", "title": "New Document", "icon": "doc.badge.plus", "action": "doc.create", "shortcut": "⌘N" },
        { "id": "doc.generate", "title": "Generate Docs", "icon": "wand.and.stars", "action": "doc.generate", "shortcut": "⇧⌘G" },
        { "id": "doc.templates", "title": "Templates", "icon": "doc.on.doc", "action": "template.list" },
        { "id": "doc.export", "title": "Export", "icon": "square.and.arrow.up", "action": "doc.export" }
      ]
    },
    {
      "id": "doc.context",
      "type": "context",
      "items": [
        { "id": "ctx.edit", "title": "Edit", "icon": "pencil", "action": "doc.update" },
        { "id": "ctx.preview", "title": "Preview", "icon": "eye", "action": "doc.preview" },
        { "id": "ctx.duplicate", "title": "Duplicate", "icon": "plus.square.on.square", "action": "doc.duplicate" },
        { "id": "ctx.export", "title": "Export", "icon": "square.and.arrow.up", "action": "doc.export" },
        { "id": "ctx.delete", "title": "Delete", "icon": "trash", "action": "doc.delete" }
      ]
    }
  ],
  "views": [
    { "id": "doc.browser", "type": "browser", "title": "Documents", "icon": "doc.text" },
    { "id": "doc.list", "type": "list", "title": "Document List", "icon": "list.bullet" },
    { "id": "doc.editor", "type": "editor", "title": "Editor", "icon": "pencil" },
    { "id": "doc.preview", "type": "detail", "title": "Preview", "icon": "eye" }
  ],
  "animations": [
    { "id": "doc.generate", "type": "progress", "duration": 0.5, "curve": "easeOut" },
    { "id": "doc.save", "type": "success", "duration": 0.3, "curve": "spring" },
    { "id": "doc.error", "type": "error", "duration": 0.3, "curve": "easeOut" }
  ],
  "icons": [
    { "id": "doc.main", "systemName": "doc.text" },
    { "id": "doc.markdown", "systemName": "doc.richtext" },
    { "id": "doc.template", "systemName": "doc.on.doc" }
  ],
  "colorScheme": "adaptive",
  "accessibility": {
    "voiceOver": true,
    "reduceMotion": true,
    "highContrast": true,
    "dynamicType": true
  }
}
