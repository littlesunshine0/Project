{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "loading", "name": "Loading", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "generating", "name": "Generating", "icon": "doc.badge.gearshape", "color": "blue" },
    { "id": "editing", "name": "Editing", "icon": "pencil", "color": "orange" },
    { "id": "saving", "name": "Saving", "icon": "arrow.down.doc", "color": "blue" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "doc.created", "name": "Document Created", "severity": "success" },
    { "id": "doc.updated", "name": "Document Updated", "severity": "info" },
    { "id": "doc.deleted", "name": "Document Deleted", "severity": "warning" },
    { "id": "doc.generated", "name": "Documentation Generated", "severity": "success" },
    { "id": "doc.exported", "name": "Document Exported", "severity": "success" },
    { "id": "doc.error", "name": "Document Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "loading", "event": "doc.load" },
    { "from": "idle", "to": "generating", "event": "doc.generate" },
    { "from": "loading", "to": "editing", "event": "doc.loaded" },
    { "from": "generating", "to": "completed", "event": "doc.generated" },
    { "from": "editing", "to": "saving", "event": "doc.save" },
    { "from": "saving", "to": "idle", "event": "doc.saved" },
    { "from": "generating", "to": "error", "event": "doc.error" },
    { "from": "error", "to": "idle", "event": "reset" }
  ]
}
