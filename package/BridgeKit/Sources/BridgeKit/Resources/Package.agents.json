{
  "agents": [
    {
      "id": "bridge.health.monitor",
      "name": "Health Monitor",
      "description": "Monitors bridge connections",
      "triggers": [
        { "type": "schedule", "condition": "every.minute" }
      ],
      "actions": [
        "check.connections",
        "reconnect.failed",
        "notify.issues"
      ],
      "config": {
        "autoStart": true,
        "priority": "high",
        "maxConcurrent": 1
      }
    }
  ]
}
