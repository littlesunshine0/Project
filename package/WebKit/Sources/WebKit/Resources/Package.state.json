{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "loading", "name": "Loading", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "rendering", "name": "Rendering", "icon": "doc.text", "color": "orange" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "page.loaded", "name": "Page Loaded", "severity": "success" },
    { "id": "page.error", "name": "Page Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "loading", "event": "page.load" },
    { "from": "loading", "to": "rendering", "event": "content.received" },
    { "from": "rendering", "to": "completed", "event": "page.loaded" },
    { "from": "loading", "to": "error", "event": "page.error" }
  ]
}
