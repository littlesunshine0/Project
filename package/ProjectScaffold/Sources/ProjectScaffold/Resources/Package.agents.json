{
  "agents": [
    {
      "id": "scaffold.template.suggester",
      "name": "Template Suggester",
      "description": "Suggests templates based on project type",
      "triggers": [
        { "type": "event", "condition": "project.describe" }
      ],
      "actions": [
        "analyze.description",
        "match.templates",
        "rank.suggestions"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    }
  ]
}
