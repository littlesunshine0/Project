{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "loading", "name": "Loading", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "syncing", "name": "Syncing", "icon": "arrow.triangle.2.circlepath", "color": "orange" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "content.loaded", "name": "Content Loaded", "severity": "success" },
    { "id": "content.synced", "name": "Content Synced", "severity": "success" },
    { "id": "content.error", "name": "Content Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "loading", "event": "content.load" },
    { "from": "loading", "to": "idle", "event": "content.loaded" },
    { "from": "idle", "to": "syncing", "event": "sync.start" },
    { "from": "syncing", "to": "completed", "event": "content.synced" }
  ]
}
