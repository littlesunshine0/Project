{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "loading", "name": "Loading", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "processing", "name": "Processing", "icon": "gearshape", "color": "orange" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "asset.loaded", "name": "Asset Loaded", "severity": "success" },
    { "id": "asset.processed", "name": "Asset Processed", "severity": "success" },
    { "id": "asset.error", "name": "Asset Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "loading", "event": "asset.load" },
    { "from": "loading", "to": "processing", "event": "asset.loaded" },
    { "from": "processing", "to": "completed", "event": "asset.processed" },
    { "from": "loading", "to": "error", "event": "asset.error" }
  ]
}
