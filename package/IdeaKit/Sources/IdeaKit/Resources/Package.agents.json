{
  "agents": [
    {
      "id": "idea.suggester",
      "name": "Idea Suggester",
      "description": "Suggests related ideas and connections",
      "triggers": [
        { "type": "event", "condition": "idea.captured" }
      ],
      "actions": [
        "analyze.idea",
        "find.related",
        "suggest.connections"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    },
    {
      "id": "idea.organizer",
      "name": "Idea Organizer",
      "description": "Organizes ideas into categories",
      "triggers": [
        { "type": "event", "condition": "idea.captured" },
        { "type": "schedule", "condition": "daily" }
      ],
      "actions": [
        "analyze.ideas",
        "categorize.ideas",
        "suggest.structure"
      ],
      "config": {
        "autoStart": true,
        "priority": "low",
        "maxConcurrent": 1
      }
    }
  ]
}
