{
  "menus": [
    {
      "id": "workflow.main",
      "type": "main",
      "items": [
        { "id": "wf.new", "title": "New Workflow", "icon": "plus", "action": "workflow.create", "shortcut": "⇧⌘N" },
        { "id": "wf.run", "title": "Run Workflow", "icon": "play.fill", "action": "workflow.run", "shortcut": "⇧⌘R" },
        { "id": "wf.list", "title": "All Workflows", "icon": "list.bullet", "action": "workflow.list", "shortcut": "⇧⌘W" },
        { "id": "wf.templates", "title": "Templates", "icon": "doc.text", "action": "template.list" },
        { "id": "wf.scheduled", "title": "Scheduled", "icon": "calendar", "action": "schedule.list" },
        { "id": "wf.running", "title": "Running", "icon": "play.circle", "action": "execution.list" },
        { "id": "wf.history", "title": "History", "icon": "clock.arrow.circlepath", "action": "history.show" },
        { "id": "wf.import", "title": "Import", "icon": "square.and.arrow.down", "action": "workflow.import" },
        { "id": "wf.export", "title": "Export", "icon": "square.and.arrow.up", "action": "workflow.export" }
      ]
    },
    {
      "id": "workflow.context",
      "type": "context",
      "items": [
        { "id": "ctx.run", "title": "Run", "icon": "play.fill", "action": "workflow.run" },
        { "id": "ctx.edit", "title": "Edit", "icon": "pencil", "action": "workflow.edit" },
        { "id": "ctx.duplicate", "title": "Duplicate", "icon": "plus.square.on.square", "action": "workflow.duplicate" },
        { "id": "ctx.schedule", "title": "Schedule", "icon": "calendar", "action": "schedule.set" },
        { "id": "ctx.export", "title": "Export", "icon": "square.and.arrow.up", "action": "workflow.export" },
        { "id": "ctx.delete", "title": "Delete", "icon": "trash", "action": "workflow.delete" }
      ]
    },
    {
      "id": "workflow.step.context",
      "type": "context",
      "items": [
        { "id": "step.edit", "title": "Edit Step", "icon": "pencil", "action": "step.edit" },
        { "id": "step.duplicate", "title": "Duplicate", "icon": "plus.square.on.square", "action": "step.duplicate" },
        { "id": "step.up", "title": "Move Up", "icon": "arrow.up", "action": "step.moveUp" },
        { "id": "step.down", "title": "Move Down", "icon": "arrow.down", "action": "step.moveDown" },
        { "id": "step.delete", "title": "Delete", "icon": "trash", "action": "step.remove" }
      ]
    }
  ],
  "views": [
    { "id": "workflow.browser", "type": "browser", "title": "Workflows", "icon": "arrow.triangle.branch" },
    { "id": "workflow.list", "type": "list", "title": "Workflow List", "icon": "list.bullet" },
    { "id": "workflow.editor", "type": "editor", "title": "Workflow Editor", "icon": "pencil" },
    { "id": "workflow.timeline", "type": "timeline", "title": "Execution Timeline", "icon": "calendar" },
    { "id": "workflow.canvas", "type": "canvas", "title": "Visual Editor", "icon": "scribble" },
    { "id": "workflow.settings", "type": "settings", "title": "Settings", "icon": "gearshape" }
  ],
  "animations": [
    { "id": "step.execute", "type": "progress", "duration": 0.3, "curve": "easeOut" },
    { "id": "step.success", "type": "success", "duration": 0.5, "curve": "spring" },
    { "id": "step.error", "type": "error", "duration": 0.3, "curve": "easeOut" },
    { "id": "workflow.complete", "type": "success", "duration": 0.8, "curve": "spring" }
  ],
  "icons": [
    { "id": "workflow.main", "systemName": "arrow.triangle.branch" },
    { "id": "workflow.step", "systemName": "circle.fill" },
    { "id": "workflow.trigger", "systemName": "bolt" },
    { "id": "workflow.condition", "systemName": "arrow.triangle.branch" },
    { "id": "workflow.action", "systemName": "play.fill" }
  ],
  "colorScheme": "adaptive",
  "accessibility": {
    "voiceOver": true,
    "reduceMotion": true,
    "highContrast": true,
    "dynamicType": true
  }
}
