{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "loading", "name": "Loading", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "running", "name": "Running", "icon": "play.fill", "color": "green" },
    { "id": "paused", "name": "Paused", "icon": "pause.fill", "color": "yellow" },
    { "id": "waiting", "name": "Waiting for Input", "icon": "hand.raised", "color": "orange" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" },
    { "id": "cancelled", "name": "Cancelled", "icon": "xmark.circle", "color": "gray" }
  ],
  "events": [
    { "id": "workflow.started", "name": "Workflow Started", "severity": "info" },
    { "id": "workflow.completed", "name": "Workflow Completed", "severity": "success" },
    { "id": "workflow.failed", "name": "Workflow Failed", "severity": "error" },
    { "id": "workflow.paused", "name": "Workflow Paused", "severity": "warning" },
    { "id": "workflow.resumed", "name": "Workflow Resumed", "severity": "info" },
    { "id": "workflow.cancelled", "name": "Workflow Cancelled", "severity": "warning" },
    { "id": "step.started", "name": "Step Started", "severity": "info" },
    { "id": "step.completed", "name": "Step Completed", "severity": "success" },
    { "id": "step.failed", "name": "Step Failed", "severity": "error" },
    { "id": "step.skipped", "name": "Step Skipped", "severity": "info" },
    { "id": "trigger.fired", "name": "Trigger Fired", "severity": "info" },
    { "id": "approval.required", "name": "Approval Required", "severity": "warning" }
  ],
  "transitions": [
    { "from": "idle", "to": "running", "event": "workflow.started" },
    { "from": "running", "to": "completed", "event": "workflow.completed" },
    { "from": "running", "to": "error", "event": "workflow.failed" },
    { "from": "running", "to": "paused", "event": "workflow.paused" },
    { "from": "running", "to": "waiting", "event": "approval.required" },
    { "from": "paused", "to": "running", "event": "workflow.resumed" },
    { "from": "waiting", "to": "running", "event": "approval.granted" },
    { "from": "running", "to": "cancelled", "event": "workflow.cancelled" },
    { "from": "completed", "to": "idle", "event": "reset" },
    { "from": "error", "to": "idle", "event": "reset" },
    { "from": "cancelled", "to": "idle", "event": "reset" }
  ]
}
