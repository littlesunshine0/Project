{
  "workflows": [
    {
      "id": "workflow.create.simple",
      "name": "Create Simple Workflow",
      "description": "Create a basic workflow with steps",
      "steps": [
        { "id": "1", "action": "ui.show.editor" },
        { "id": "2", "action": "workflow.create" },
        { "id": "3", "action": "step.add" },
        { "id": "4", "action": "workflow.validate" },
        { "id": "5", "action": "notify.success" }
      ],
      "triggers": ["menu.workflow.new"]
    },
    {
      "id": "workflow.create.from.template",
      "name": "Create from Template",
      "description": "Create workflow from a template",
      "steps": [
        { "id": "1", "action": "template.list" },
        { "id": "2", "action": "ui.select.single" },
        { "id": "3", "action": "template.apply" },
        { "id": "4", "action": "workflow.validate" },
        { "id": "5", "action": "notify.success" }
      ],
      "triggers": ["menu.template.apply"]
    },
    {
      "id": "workflow.run.with.params",
      "name": "Run with Parameters",
      "description": "Run workflow with custom parameters",
      "steps": [
        { "id": "1", "action": "workflow.list" },
        { "id": "2", "action": "ui.select.single" },
        { "id": "3", "action": "ui.show.params.form" },
        { "id": "4", "action": "workflow.run" },
        { "id": "5", "action": "ui.show.progress" }
      ],
      "triggers": ["shortcut.⇧⌘R"]
    }
  ]
}
