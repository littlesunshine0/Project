{
  "agents": [
    {
      "id": "nlu.intent.classifier",
      "name": "Intent Classifier",
      "description": "Classifies user intents in real-time",
      "triggers": [
        { "type": "event", "condition": "user.input" }
      ],
      "actions": [
        "parse.input",
        "classify.intent",
        "extract.entities",
        "update.context"
      ],
      "config": {
        "autoStart": true,
        "priority": "high",
        "maxConcurrent": 2
      }
    },
    {
      "id": "nlu.context.tracker",
      "name": "Context Tracker",
      "description": "Tracks conversation context",
      "triggers": [
        { "type": "event", "condition": "intent.detected" },
        { "type": "event", "condition": "entity.extracted" }
      ],
      "actions": [
        "update.context",
        "resolve.references",
        "maintain.history"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    },
    {
      "id": "nlu.model.optimizer",
      "name": "Model Optimizer",
      "description": "Optimizes NLU models based on usage",
      "triggers": [
        { "type": "schedule", "condition": "daily" },
        { "type": "event", "condition": "feedback.received" }
      ],
      "actions": [
        "collect.feedback",
        "analyze.errors",
        "retrain.model",
        "deploy.update"
      ],
      "config": {
        "autoStart": false,
        "priority": "low",
        "maxConcurrent": 1
      }
    }
  ]
}
