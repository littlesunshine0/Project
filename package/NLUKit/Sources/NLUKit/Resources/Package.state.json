{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "parsing", "name": "Parsing", "icon": "text.viewfinder", "color": "blue" },
    { "id": "analyzing", "name": "Analyzing", "icon": "brain", "color": "purple" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "intent.detected", "name": "Intent Detected", "severity": "success" },
    { "id": "entity.extracted", "name": "Entity Extracted", "severity": "info" },
    { "id": "context.updated", "name": "Context Updated", "severity": "info" },
    { "id": "nlu.error", "name": "NLU Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "parsing", "event": "parse.start" },
    { "from": "parsing", "to": "analyzing", "event": "parse.complete" },
    { "from": "analyzing", "to": "completed", "event": "intent.detected" },
    { "from": "analyzing", "to": "error", "event": "nlu.error" },
    { "from": "error", "to": "idle", "event": "reset" }
  ]
}
