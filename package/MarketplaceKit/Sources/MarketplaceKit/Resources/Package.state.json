{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "browsing", "name": "Browsing", "icon": "square.grid.2x2", "color": "blue" },
    { "id": "installing", "name": "Installing", "icon": "arrow.down.circle", "color": "orange" },
    { "id": "updating", "name": "Updating", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "package.installed", "name": "Package Installed", "severity": "success" },
    { "id": "package.updated", "name": "Package Updated", "severity": "success" },
    { "id": "package.error", "name": "Package Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "browsing", "event": "browse.start" },
    { "from": "idle", "to": "installing", "event": "install.start" },
    { "from": "installing", "to": "completed", "event": "package.installed" },
    { "from": "idle", "to": "updating", "event": "update.start" },
    { "from": "updating", "to": "completed", "event": "package.updated" }
  ]
}
