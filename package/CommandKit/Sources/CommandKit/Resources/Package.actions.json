{
  "actions": [
    {
      "id": "command.create",
      "name": "Create Command",
      "description": "Create a new custom command",
      "icon": "plus",
      "input": [
        { "name": "name", "type": "string", "required": true },
        { "name": "syntax", "type": "string", "required": true },
        { "name": "description", "type": "string", "required": false },
        { "name": "handler", "type": "string", "required": true }
      ],
      "output": "Command",
      "shortcut": "⌘N",
      "category": "create"
    },
    {
      "id": "command.execute",
      "name": "Execute Command",
      "description": "Execute a command by ID or syntax",
      "icon": "play.fill",
      "input": [
        { "name": "commandId", "type": "string", "required": false },
        { "name": "syntax", "type": "string", "required": false },
        { "name": "parameters", "type": "object", "required": false }
      ],
      "output": "ExecutionResult",
      "shortcut": "⌘↩",
      "category": "execute"
    },
    {
      "id": "command.delete",
      "name": "Delete Command",
      "description": "Delete a custom command",
      "icon": "trash",
      "input": [
        { "name": "commandId", "type": "string", "required": true }
      ],
      "output": "Bool",
      "shortcut": "⌘⌫",
      "category": "delete"
    },
    {
      "id": "command.update",
      "name": "Update Command",
      "description": "Update an existing command",
      "icon": "pencil",
      "input": [
        { "name": "commandId", "type": "string", "required": true },
        { "name": "changes", "type": "object", "required": true }
      ],
      "output": "Command",
      "shortcut": "⌘S",
      "category": "update"
    },
    {
      "id": "command.list",
      "name": "List Commands",
      "description": "List all available commands",
      "icon": "list.bullet",
      "input": [
        { "name": "category", "type": "string", "required": false },
        { "name": "limit", "type": "int", "required": false, "defaultValue": "50" }
      ],
      "output": "[Command]",
      "category": "read"
    },
    {
      "id": "command.search",
      "name": "Search Commands",
      "description": "Search commands by query",
      "icon": "magnifyingglass",
      "input": [
        { "name": "query", "type": "string", "required": true }
      ],
      "output": "[Command]",
      "shortcut": "⌘F",
      "category": "read"
    },
    {
      "id": "command.favorite",
      "name": "Toggle Favorite",
      "description": "Add or remove command from favorites",
      "icon": "star",
      "input": [
        { "name": "commandId", "type": "string", "required": true }
      ],
      "output": "Bool",
      "category": "update"
    },
    {
      "id": "command.export",
      "name": "Export Commands",
      "description": "Export commands to file",
      "icon": "square.and.arrow.up",
      "input": [
        { "name": "commandIds", "type": "array", "required": false },
        { "name": "format", "type": "string", "required": false, "defaultValue": "json" }
      ],
      "output": "URL",
      "category": "export"
    },
    {
      "id": "command.import",
      "name": "Import Commands",
      "description": "Import commands from file",
      "icon": "square.and.arrow.down",
      "input": [
        { "name": "file", "type": "file", "required": true }
      ],
      "output": "[Command]",
      "category": "create"
    },
    {
      "id": "command.duplicate",
      "name": "Duplicate Command",
      "description": "Duplicate an existing command",
      "icon": "plus.square.on.square",
      "input": [
        { "name": "commandId", "type": "string", "required": true }
      ],
      "output": "Command",
      "shortcut": "⌘D",
      "category": "create"
    },
    {
      "id": "command.share",
      "name": "Share Command",
      "description": "Share a command",
      "icon": "square.and.arrow.up",
      "input": [
        { "name": "commandId", "type": "string", "required": true }
      ],
      "output": "URL",
      "category": "share"
    },
    {
      "id": "command.palette.open",
      "name": "Open Command Palette",
      "description": "Open the command palette",
      "icon": "command",
      "input": [],
      "output": "Void",
      "shortcut": "⌘K",
      "category": "navigate"
    },
    {
      "id": "history.show",
      "name": "Show History",
      "description": "Show command execution history",
      "icon": "clock.arrow.circlepath",
      "input": [
        { "name": "limit", "type": "int", "required": false, "defaultValue": "50" }
      ],
      "output": "[CommandHistory]",
      "shortcut": "⇧⌘H",
      "category": "read"
    },
    {
      "id": "history.clear",
      "name": "Clear History",
      "description": "Clear command history",
      "icon": "trash",
      "input": [],
      "output": "Void",
      "category": "delete"
    },
    {
      "id": "macro.record",
      "name": "Record Macro",
      "description": "Start recording a macro",
      "icon": "record.circle",
      "input": [
        { "name": "name", "type": "string", "required": true }
      ],
      "output": "Macro",
      "category": "create"
    },
    {
      "id": "macro.stop",
      "name": "Stop Recording",
      "description": "Stop recording the current macro",
      "icon": "stop.fill",
      "input": [],
      "output": "Macro",
      "category": "update"
    },
    {
      "id": "macro.play",
      "name": "Play Macro",
      "description": "Play a recorded macro",
      "icon": "play.fill",
      "input": [
        { "name": "macroId", "type": "string", "required": true }
      ],
      "output": "ExecutionResult",
      "category": "execute"
    },
    {
      "id": "alias.create",
      "name": "Create Alias",
      "description": "Create a command alias",
      "icon": "link",
      "input": [
        { "name": "alias", "type": "string", "required": true },
        { "name": "commandId", "type": "string", "required": true }
      ],
      "output": "CommandAlias",
      "category": "create"
    },
    {
      "id": "alias.delete",
      "name": "Delete Alias",
      "description": "Delete a command alias",
      "icon": "link.badge.minus",
      "input": [
        { "name": "alias", "type": "string", "required": true }
      ],
      "output": "Bool",
      "category": "delete"
    },
    {
      "id": "template.create",
      "name": "Create Template",
      "description": "Create a command template",
      "icon": "doc.badge.plus",
      "input": [
        { "name": "name", "type": "string", "required": true },
        { "name": "template", "type": "string", "required": true }
      ],
      "output": "CommandTemplate",
      "category": "create"
    },
    {
      "id": "template.apply",
      "name": "Apply Template",
      "description": "Apply a command template",
      "icon": "doc.on.doc",
      "input": [
        { "name": "templateId", "type": "string", "required": true },
        { "name": "parameters", "type": "object", "required": false }
      ],
      "output": "Command",
      "category": "create"
    }
  ]
}
