{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "loading", "name": "Loading", "icon": "arrow.clockwise", "color": "blue" },
    { "id": "executing", "name": "Executing", "icon": "play.fill", "color": "green" },
    { "id": "recording", "name": "Recording Macro", "icon": "record.circle", "color": "red" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "command.started", "name": "Command Started", "severity": "info" },
    { "id": "command.completed", "name": "Command Completed", "severity": "success" },
    { "id": "command.failed", "name": "Command Failed", "severity": "error" },
    { "id": "command.cancelled", "name": "Command Cancelled", "severity": "warning" },
    { "id": "macro.started", "name": "Macro Recording Started", "severity": "info" },
    { "id": "macro.stopped", "name": "Macro Recording Stopped", "severity": "info" },
    { "id": "suggestion.shown", "name": "Suggestion Shown", "severity": "info" },
    { "id": "autocomplete.triggered", "name": "Autocomplete Triggered", "severity": "info" }
  ],
  "transitions": [
    { "from": "idle", "to": "executing", "event": "command.started" },
    { "from": "executing", "to": "completed", "event": "command.completed" },
    { "from": "executing", "to": "error", "event": "command.failed" },
    { "from": "executing", "to": "idle", "event": "command.cancelled" },
    { "from": "completed", "to": "idle", "event": "reset" },
    { "from": "error", "to": "idle", "event": "reset" },
    { "from": "idle", "to": "recording", "event": "macro.started" },
    { "from": "recording", "to": "idle", "event": "macro.stopped" }
  ]
}
