{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "reading", "name": "Reading", "icon": "doc.text", "color": "blue" },
    { "id": "writing", "name": "Writing", "icon": "pencil", "color": "orange" },
    { "id": "copying", "name": "Copying", "icon": "doc.on.doc", "color": "blue" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" },
    { "id": "completed", "name": "Completed", "icon": "checkmark.circle", "color": "green" }
  ],
  "events": [
    { "id": "file.created", "name": "File Created", "severity": "success" },
    { "id": "file.saved", "name": "File Saved", "severity": "success" },
    { "id": "file.deleted", "name": "File Deleted", "severity": "warning" },
    { "id": "file.error", "name": "File Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "reading", "event": "file.read.start" },
    { "from": "reading", "to": "idle", "event": "file.read.complete" },
    { "from": "idle", "to": "writing", "event": "file.write.start" },
    { "from": "writing", "to": "completed", "event": "file.saved" },
    { "from": "idle", "to": "copying", "event": "file.copy.start" },
    { "from": "copying", "to": "completed", "event": "file.created" },
    { "from": "writing", "to": "error", "event": "file.error" }
  ]
}
