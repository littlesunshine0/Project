{
  "agents": [
    {
      "id": "user.session.manager",
      "name": "Session Manager",
      "description": "Manages user sessions",
      "triggers": [
        { "type": "event", "condition": "user.login" },
        { "type": "schedule", "condition": "every.5.minutes" }
      ],
      "actions": [
        "validate.session",
        "refresh.token",
        "handle.expiry"
      ],
      "config": {
        "autoStart": true,
        "priority": "high",
        "maxConcurrent": 1
      }
    },
    {
      "id": "user.preference.sync",
      "name": "Preference Sync",
      "description": "Syncs user preferences",
      "triggers": [
        { "type": "event", "condition": "preference.changed" }
      ],
      "actions": [
        "sync.preferences",
        "backup.local"
      ],
      "config": {
        "autoStart": true,
        "priority": "normal",
        "maxConcurrent": 1
      }
    }
  ]
}
