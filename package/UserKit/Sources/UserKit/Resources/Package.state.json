{
  "states": [
    { "id": "idle", "name": "Idle", "icon": "circle", "color": "gray" },
    { "id": "authenticating", "name": "Authenticating", "icon": "lock", "color": "blue" },
    { "id": "authenticated", "name": "Authenticated", "icon": "checkmark.shield", "color": "green" },
    { "id": "updating", "name": "Updating", "icon": "arrow.clockwise", "color": "orange" },
    { "id": "error", "name": "Error", "icon": "exclamationmark.triangle", "color": "red" }
  ],
  "events": [
    { "id": "user.login", "name": "User Logged In", "severity": "success" },
    { "id": "user.logout", "name": "User Logged Out", "severity": "info" },
    { "id": "profile.updated", "name": "Profile Updated", "severity": "success" },
    { "id": "auth.error", "name": "Authentication Error", "severity": "error" }
  ],
  "transitions": [
    { "from": "idle", "to": "authenticating", "event": "auth.start" },
    { "from": "authenticating", "to": "authenticated", "event": "user.login" },
    { "from": "authenticated", "to": "idle", "event": "user.logout" },
    { "from": "authenticated", "to": "updating", "event": "profile.update" },
    { "from": "updating", "to": "authenticated", "event": "profile.updated" },
    { "from": "authenticating", "to": "error", "event": "auth.error" }
  ]
}
